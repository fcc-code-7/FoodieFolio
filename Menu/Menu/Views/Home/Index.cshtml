@model List<Menu.Models.Dishes>
@{
    ViewData["Title"] = "Menu Index";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card border-0 shadow d-flex flex-column" style="height: 100%;">
                    <div class="mx-2">
                        <img class="card-img-top" src="@item.IconUrl" alt="Card image cap">
                    </div>
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title">@item.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@item.price</h6>
                            <p class="card-text">@item.Description</p>
                        </div>
                        <div></div> <!-- This empty div helps to push content to the top -->
                    </div>
                </div>
            </div>
        }
    </div>
</div>


